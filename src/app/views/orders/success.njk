{% import 'parts/card.njk' as card %}

{% extends 'layout.njk' %}
{% block content %}
{% call card.render('', 'order large container') %}
<div class="success-lottie"></div>
<h2>Votre commande est passée avec succès !</h2>
<p>
  Attendez la réponse du vendeur dans votre email enregistré.
</p>
<a class="next-action" href="/products/search">
Autres produits
<i class="material-icons">arrow_forward</i>
</a>
{% endcall %}

<script src="/lottie.min.js"></script>
<script>
  const element = document.querySelector('.success-lottie');

  lottie.loadAnimation({
    container: element,
    renderer: 'svg',
    loop: false,
    autoplay: true,
    path: '/success-lottie.json',
  }).setSpeed(1.5);
</script>
{% endblock %}