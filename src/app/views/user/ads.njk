{% import 'parts/card.njk' as card %}

{% extends 'layout.njk' %}
{% block content %}
{% call card.render('Mes annonces', 'users-ads large container') %}
<div class="items">
  {% for product in products %}
  <div class="item">
    <div
      class="image"
      style="background-image: url('{{ product.img }}');"
    >
    </div>
    <div class="info">
      <div class="title">{{ product.name }}</div>
      <div class="price">{{ product.formattedPrice }}</div>
      <div class="published">Publié dans {{ product.formattedCreatedAt }}</div>
      <div class="actions">
        <a href="/products/{{ product.id }}/edit">Éditer</a>
        <a href="/products/{{ product.id }}">Voir plus</a>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endcall %}
{% endblock %}