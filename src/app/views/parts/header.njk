<header>
  <div class="container">
    <a href="/">
      <div class="logo">
        <h1>Launchstore</h1>
        <h2>ACHETER ET VENDRE</h2>
      </div>
    </a>
    <form class="search" action="/products/search" method="GET">
      <input
        type="text"
        name="filter"
        placeholder="Search Products"
        {% if search.term %}
          value="{{ search.term }}"
        {% endif %}
      >
    </form>
    <nav class="primary">
      <ul>
        <li>
          <a href="/ads/create">
            <i class="material-icons">add</i>
            Nouvelle Annonce
          </a>
        </li>
        <li class="dropdown-container">
          <a href="/accounts">
            <i class="material-icons">account_circle</i>
            Mon Compte
          </a>
          {% if session.userId %}
          <ul class="dropdown">
            <li>
              <a href="/accounts">Mon Compte</a>
            </li>
            <li>
              <a href="/users/ads">Mes annonces</a>
            </li>
            <li>
              <a href="/orders">Mes demandes</a>
            </li>
            <li>
              <a href="/orders/sales">Mes ventes</a>
            </li>
            <li>
              <form action="/users/logout" method="POST">
                <button>Se d√©connecter</button>
              </form>
            </li>
          </ul>
          {% endif %}
        </li>
        <li class="cart">
          <a href="/cart">
            <i class="material-icons">shopping_cart</i>
            {% if (session.cart) and (session.cart.total.quantity > 0) %}
            <span id="cart-status-info">{{session.cart.total.quantity}}</span>
            {% endif %}
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>