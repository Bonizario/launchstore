<div class="item">
  <div>Adresse e-mail</div>
  <div>
    <input
      class="box-shadow"
      type="email"
      name="email"
      value="{{ user.email }}"
      onblur="Validate.apply(this, 'isEmail')"
      required
    >
  </div>
</div>
