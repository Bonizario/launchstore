{% import 'parts/card.njk' as card %}

{% extends 'layout.njk' %}
{% block content %}
{% call card.render('Récupérez votre mot de passe', 'small container ') %}
<form method="POST" action="/users/forgot-password">
  <div class="fields">
    <div class="item">
      <div>Adresse e-mail</div>
      <div>
        <input
          class="box-shadow"
          type="email"
          name="email"
          placeholder="Saisissez l'adresse e-mail associé à votre compte"
          value="{{ user.email }}"
          onblur="Validate.apply(this, 'isEmail')"
          required
        >
      </div>
    </div>
  </div>
  <button class="button" type="submit">Récupérer</button>
</form>
{% endcall %}
{% endblock %}